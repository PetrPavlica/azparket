{**
 * @param Filter                         $filter
 * @param Nette\Forms\Controls\TextInput $input
 * @param string                         $iconPrefix       Icon prefix (fa fa-)
 *}

{if $outer}
	<div class="row">
		{label $input class => 'col-sm-3 control-label' /}
		<div class="col-sm-9">
			<div class="input-group">
				{input $input}
				<label n:name="$input" class="input-group-addon"><span class="{$iconPrefix}calendar"></span></label>
			</div>
		</div>
	</div>
{else}
	<div class="form-inline">
		<div class="input-group input-group-sm">
			{input $input}
			<div class="input-group-append">
				<span class="input-group-text {$iconPrefix}calendar icon-datepicker"></span>
			</div>
		</div>
	</div>
{/if}
